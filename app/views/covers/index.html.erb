<p id="notice"><%= notice %></p>

<h1>Covers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @covers.each do |cover| %>
      <tr>
        <td><%= cover.title %></td>
        <td><%= cover.book_id %></td>
        <td><%= link_to 'Show', pages_path %></td>
        <td><%= link_to 'Edit', edit_cover_path(cover) %></td>
        <td><%= link_to 'Destroy', cover, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cover', new_cover_path %>
<%= link_to 'Back', books_path %>

